<Window x:Class="ProjetoFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoFinal"
        mc:Ignorable="d"
        Title="PaginaPrincipal" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="groupBox" Header="GroupBox" Margin="10">
            <Grid Margin="10,10,-2,-13">
                <GroupBox x:Name="groupBox1" Header="Projetos" Margin="10,0,226,10">
                    <Grid Margin="10,0,-2,6">
                        <Button x:Name="button" Content="Editar Projeto" Margin="10,20,215,0" VerticalAlignment="Top" Height="26"/>
                        <Button x:Name="button1" Content="Adicionar Projeto" Margin="10,60,215,0" VerticalAlignment="Top" Height="33"/>
                        <Rectangle Fill="#FFF4F4F5" Margin="10,108,215,0" Stroke="Black"/>
                        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Right" Margin="0,20,10,0" Stroke="Black" Width="172" Height="26" VerticalAlignment="Top"/>
                        <TextBlock x:Name="DinheiroAreceber" HorizontalAlignment="Right" Margin="0,25,93,0" TextWrapping="Wrap" Text="Falta receber:" VerticalAlignment="Top"/>
                        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Right" Margin="0,63,10,0" Stroke="Black" Width="172" Height="26" VerticalAlignment="Top"/>
                        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Right" Margin="0,68,85,0" TextWrapping="Wrap" Text="Recebido/Mês:" VerticalAlignment="Top"/>
                        <TextBlock x:Name="textBlock" HorizontalAlignment="Right" Margin="0,25,33,0" TextWrapping="Wrap" Text="2.000 $" VerticalAlignment="Top"/>
                        <TextBlock x:Name="textBlock1" HorizontalAlignment="Right" Margin="0,68,33,0" TextWrapping="Wrap" Text="1.400 $" VerticalAlignment="Top"/>
                        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Right" Margin="0,144,10,0" Stroke="Black" Width="172"/>
                        <Button x:Name="FaturaMensal" Content="Fatura Mensal" HorizontalAlignment="Right" Margin="0,108,10,0" VerticalAlignment="Top" Width="172"/>
                        <Rectangle Fill="#FFF4F4F5" Margin="10,108,215,160" Stroke="Black"/>
                        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="95,115,0,0" TextWrapping="Wrap" Text="Orquestra Filarmonica " VerticalAlignment="Top"/>
                        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="95,136,0,0" TextWrapping="Wrap" Text="Cliente: " VerticalAlignment="Top"/>
                        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Margin="10,108,0,160" Stroke="Black" Width="80"/>
                        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="170,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                        <TextBlock x:Name="textBlock5" Margin="95,0,0,167" TextWrapping="Wrap" Text="Pagamento: 50,00$" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                        <Rectangle Fill="#FFF4F4F5" Margin="10,0,215,81" Stroke="Black" Height="72" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock2_Copy" HorizontalAlignment="Left" Margin="95,0,0,130" TextWrapping="Wrap" Text="Orquestra Filarmonica " VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock3_Copy" HorizontalAlignment="Left" Margin="95,0,0,109" TextWrapping="Wrap" Text="Cliente: " VerticalAlignment="Bottom"/>
                        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Margin="10,0,0,81" Stroke="Black" Width="80" Height="72" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock5_Copy" Margin="95,0,0,88" TextWrapping="Wrap" Text="Pagamento: 50,00$" VerticalAlignment="Bottom" HorizontalAlignment="Left" d:LayoutOverrides="VerticalAlignment"/>
                        <Rectangle Fill="#FFF4F4F5" Margin="10,0,215,3" Stroke="Black" Height="72" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock2_Copy1" HorizontalAlignment="Left" Margin="95,0,0,52" TextWrapping="Wrap" Text="Orquestra Filarmonica " VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock3_Copy1" HorizontalAlignment="Left" Margin="95,0,0,31" TextWrapping="Wrap" Text="Cliente: " VerticalAlignment="Bottom"/>
                        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Margin="10,0,0,3" Stroke="Black" Width="80" Height="72" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock5_Copy1" Margin="95,0,0,10" TextWrapping="Wrap" Text="Pagamento: 50,00$" VerticalAlignment="Bottom" HorizontalAlignment="Left" d:LayoutOverrides="VerticalAlignment"/>

                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox2" Header="Clientes" Margin="0,0,10,10" HorizontalAlignment="Right" Width="211">
                    <Grid Margin="10,0,-2,1" RenderTransformOrigin="-0.92,-1.01">
                        <Button x:Name="EditarCliente" Content="Editar Cliente" Margin="10,19,10,0" VerticalAlignment="Top" Height="22"/>
                        <Button x:Name="AdicionarCliente" Content="Adicionar Cliente" Margin="10,55,10,0" VerticalAlignment="Top" Height="29" Click="Button3_Click"/>
                        <Rectangle Fill="#FFF4F4F5" Margin="10,102,10,10" Stroke="Black"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
